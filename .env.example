# ===========================================
# Echelon Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# Network Configuration
# ===========================================
NEXT_PUBLIC_CHAIN_ID=11155111

# ===========================================
# RPC Providers
# ===========================================
# Get your Alchemy API key at https://www.alchemy.com/
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key

# ===========================================
# Contract Addresses (update after deployment)
# ===========================================
NEXT_PUBLIC_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_EXECUTION_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# Envio Configuration
# ===========================================
# For local development
NEXT_PUBLIC_ENVIO_GRAPHQL_URL=http://localhost:8080/v1/graphql
# Get your API key at https://envio.dev/
ENVIO_API_KEY=your_envio_api_key

# ===========================================
# Bundler (Pimlico)
# ===========================================
# Get your API key at https://pimlico.io/
NEXT_PUBLIC_PIMLICO_API_KEY=your_pimlico_api_key

# ===========================================
# WalletConnect (optional)
# ===========================================
# Get your project ID at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_ID=your_walletconnect_project_id

# ===========================================
