# ===========================================
# Echelon Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
#
# IMPORTANT: This app requires MetaMask Flask >= 13.5.0
# Download: https://metamask.io/flask/
# Standard MetaMask does NOT support ERC-7715 permissions
# ===========================================

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=11155111

# RPC Provider (Alchemy)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Contract Addresses (Sepolia - Deployed Jan 1, 2026)
NEXT_PUBLIC_REGISTRY_ADDRESS=0xF3cc29600f69d27330b3481523F2043E11D23bfE
NEXT_PUBLIC_EXECUTION_ADDRESS=0x9A6d5AbD2bae7961aFe50255bDBFcc003832D96d
NEXT_PUBLIC_REPUTATION_ADDRESS=0x4cED576FDb85D1E486FDE0C9c79507d5F7E5845c
NEXT_PUBLIC_VALIDATION_ADDRESS=0xDdA9032E4DD0084B2890399DF94010A8E08Fedb6

# Reputation-Gated Permission Contracts (ERC-7715 + Envio)
NEXT_PUBLIC_ENVIO_ORACLE_ADDRESS=0xAc2406A440AD21242E0e6ae579C87B6d8b67B5E4
NEXT_PUBLIC_REPUTATION_ENFORCER_ADDRESS=0xaEAA3CE6Bf83103beD2d5c4E63Ab07BB4C6ECC16

# Permission Registry (on-chain ERC-7715 permission tracking)
NEXT_PUBLIC_PERMISSION_REGISTRY_ADDRESS=0x46a087147398ba5E79d55132C6607a0774E1c538

# ===========================================
# Fund Manager (Official Managed Portfolio)
# ===========================================
# Set after running RegisterAgents.s.sol
# These identify the pre-built, verified Fund Manager agent
NEXT_PUBLIC_FUND_MANAGER_ID=1
NEXT_PUBLIC_FUND_MANAGER_ADDRESS=0x562937835cdD5C92F54B94Df658Fd3b50A68ecD5

# Envio GraphQL Endpoint
# Local: http://localhost:8080/v1/graphql
# Hosted: https://indexer.bigdevenergy.link/xxxxxxx/v1/graphql
NEXT_PUBLIC_ENVIO_GRAPHQL_URL=http://localhost:8080/v1/graphql

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_ID=your_walletconnect_project_id

# Token Addresses (Sepolia)
NEXT_PUBLIC_USDC_ADDRESS=0x2BfBc55F4A360352Dc89e599D04898F150472cA6

# Bundler API Key (Pimlico)
NEXT_PUBLIC_PIMLICO_API_KEY=your_pimlico_api_key

# ===========================================
# Supabase (Delegation Storage)
# ===========================================
# Create a project at https://supabase.com/dashboard
# Run the SQL schema from lib/supabase-schema.sql
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
